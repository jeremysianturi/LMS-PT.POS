<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_top"
    android:paddingBottom="25dp"
    app:layout_behavior="com.goggle.android.material.BottomSheet">

    <TextView
        android:id="@+id/tvTittleInfo"
        style="@style/text_tittle_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Berhasil" />

    <TextView
        android:id="@+id/tvContentInfo"
        style="@style/text_content_style_grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvTittleInfo"
        app:layout_constraintStart_toStartOf="@+id/tvTittleInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleInfo"
        tools:text="Laporan Anda akan segera ditindaklanjuti maksimal 20 menit." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgInfo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContentInfo"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/img_confirm" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_orange"
        android:text="@string/txt_oke_button"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>