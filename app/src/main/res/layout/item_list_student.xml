<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/imageView7"
        style="@style/iconListStyle"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDetailContentStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:srcCompat="@drawable/ic_on" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/text_content_style_grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tvDetailContentStudent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailContentStudent"
        tools:text="05/06/2020" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/text_tittle_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tvStatus"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Event Real Training" />

    <TextView
        android:id="@+id/tvContentStudentList"
        style="@style/text_content_style_grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Telkom Indonesia - Batch 1" />

    <TextView
        android:id="@+id/tvDetailContentStudent"
        style="@style/text_content_style_grey"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvContentStudentList"
        app:layout_constraintTop_toBottomOf="@+id/tvContentStudentList"
        tools:text="Training - Kantor Telkom Corpu Ba..." />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/text_content_style_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_orange"
        android:padding="5dp"
        android:text="ongoing"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>